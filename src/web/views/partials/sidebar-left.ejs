<!-- Discord 스타일 좌측 사이드바 -->
<aside class="discord-sidebar sidebar-left" id="sidebar-left">
    <!-- 사이드바 로고 -->
    <div class="discord-sidebar-logo">
        <img src="https://i.imgur.com/IOPA7gL.gif" alt="Aimdot.dev">
        <h2>Aimdot.dev</h2>
    </div>

    <!-- 로그인 전 섹션 -->
    <div class="discord-login-section" id="login-section">
        <h3>시작하기</h3>
        <p>Discord 계정으로 로그인하여 더 많은 기능을 이용하세요!</p>
        <button class="discord-btn discord-btn-primary" id="discord-login">
            <i class="fab fa-discord"></i>
            <span>Discord로 로그인</span>
        </button>
    </div>
    
    <!-- Discord에 봇 추가 버튼 (로그인 박스 외부) -->
    <a href="#" class="discord-add-bot-btn" id="add-bot-guest">
        <i class="fab fa-discord"></i>
        Discord에 봇 추가
    </a>

    <!-- 사용자 프로필 섹션 (로그인 후) -->
    <div class="discord-user-card" id="user-profile-section" style="display: none;">
        <div class="discord-user-header">
            <img src="" alt="Avatar" class="discord-user-avatar" id="user-profile-avatar">
            <div class="discord-user-info">
                <div class="discord-user-name">
                    <span id="user-profile-name">로딩 중...</span>
                    <i class="fas fa-edit discord-edit-btn" onclick="openNicknameModal()" title="닉네임 수정"></i>
                </div>
                <div class="discord-user-role" id="user-profile-role">guest</div>
            </div>
        </div>
        
        <!-- 사용자 통계 -->
        <div class="discord-user-stats">
            <div class="discord-stat-item">
                <span class="discord-stat-label">전적</span>
                <span class="discord-stat-value" id="stat-record">0승 0패</span>
            </div>
            <div class="discord-stat-item">
                <span class="discord-stat-label">승률</span>
                <span class="discord-stat-value" id="stat-winrate">0%</span>
            </div>
            <div class="discord-stat-item">
                <span class="discord-stat-label">평균 킬</span>
                <span class="discord-stat-value" id="stat-avgkills">0</span>
            </div>
            <div class="discord-stat-item">
                <span class="discord-stat-label">정규전</span>
                <span class="discord-stat-value" id="stat-ranked">0회</span>
            </div>
            <div class="discord-stat-item">
                <span class="discord-stat-label">모의전</span>
                <span class="discord-stat-value" id="stat-practice">0회</span>
            </div>
            <div class="discord-stat-item">
                <span class="discord-stat-label">총 게임</span>
                <span class="discord-stat-value" id="stat-total">0회</span>
            </div>
        </div>
        
        <!-- 프로필 액션 버튼들 -->
        <div class="discord-profile-actions">
            <button class="discord-btn discord-btn-secondary" onclick="viewFullProfile()">
                <i class="fas fa-user"></i>
                프로필 보기
            </button>
            <a href="/dashboard" class="discord-btn discord-btn-secondary">
                <i class="fas fa-tachometer-alt"></i>
                대시보드
            </a>
            <a href="/auth/logout" class="discord-btn discord-btn-danger">
                <i class="fas fa-sign-out-alt"></i>
                로그아웃
            </a>
        </div>
    </div>
    
    <!-- Discord에 봇 추가 버튼 (프로필 박스 외부) -->
    <a href="#" class="discord-add-bot-btn" id="add-bot-user" style="display: none;">
        <i class="fab fa-discord"></i>
        Discord에 봇 추가
    </a>

    <!-- 온라인 상태 표시 (선택적) -->
    <div class="discord-status-section">
        <div class="discord-status online">
            <i class="fas fa-circle"></i>
            <span>봇 온라인</span>
        </div>
    </div>
</aside>

<style>
/* Discord 좌측 사이드바 스타일 */
.discord-sidebar.sidebar-left {
    width: 280px;
    background: var(--bg-secondary);
    border-right: 1px solid var(--border-color);
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    overflow-y: auto;
    z-index: 100;
    transition: transform 0.3s ease;
}

/* Discord 스크롤바 */
.discord-sidebar::-webkit-scrollbar {
    width: 8px;
}

.discord-sidebar::-webkit-scrollbar-track {
    background: var(--bg-secondary);
}

.discord-sidebar::-webkit-scrollbar-thumb {
    background: var(--bg-hover);
    border-radius: 4px;
}

.discord-sidebar::-webkit-scrollbar-thumb:hover {
    background: var(--border-color);
}

/* 사이드바 로고 */
.discord-sidebar-logo {
    padding: 20px;
    text-align: center;
    border-bottom: 1px solid var(--border-color);
}

.discord-sidebar-logo img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-bottom: 10px;
    animation: pulse 2s infinite;
}

.discord-sidebar-logo h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
}

/* 로그인 섹션 */
.discord-login-section {
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-hover) 100%);
    border-radius: 12px;
    padding: 20px;
    margin: 20px;
    border: 1px solid var(--border-color);
    text-align: center;
}

.discord-login-section h3 {
    font-size: 18px;
    margin-bottom: 10px;
    color: var(--text-bright);
}

.discord-login-section p {
    font-size: 14px;
    color: var(--text-muted);
    margin-bottom: 20px;
    line-height: 1.5;
}

/* 사용자 프로필 카드 */
.discord-user-card {
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-hover) 100%);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 20px;
    margin: 20px;
    box-shadow: var(--shadow-small);
}

.discord-user-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
}

.discord-user-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    border: 3px solid var(--discord-blurple);
    transition: border-color 0.3s;
}

.discord-user-avatar:hover {
    border-color: var(--discord-light-blurple);
}

.discord-user-info {
    flex: 1;
}

.discord-user-name {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-bright);
    margin-bottom: 4px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.discord-edit-btn {
    font-size: 14px;
    color: var(--discord-blurple);
    cursor: pointer;
    transition: color 0.2s;
    opacity: 0.7;
}

.discord-edit-btn:hover {
    color: var(--discord-light-blurple);
    opacity: 1;
}

.discord-user-role {
    font-size: 13px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* 사용자 통계 */
.discord-user-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    border-top: 1px solid var(--border-light);
    padding-top: 16px;
    margin-bottom: 20px;
}

.discord-stat-item {
    background: rgba(88, 101, 242, 0.05);
    padding: 12px;
    border-radius: 8px;
    text-align: center;
    transition: background 0.2s;
}

.discord-stat-item:hover {
    background: rgba(88, 101, 242, 0.1);
}

.discord-stat-label {
    display: block;
    font-size: 11px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
}

.discord-stat-value {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-bright);
}

/* 프로필 액션 버튼들 */
.discord-profile-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

/* Discord에 봇 추가 버튼 */
.discord-add-bot-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin: 20px;
    padding: 12px 16px;
    background: var(--discord-blurple);
    color: #FFFFFF;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
    text-align: center;
}

.discord-add-bot-btn:hover {
    background: var(--discord-dark-blurple);
    transform: translateY(-2px);
    box-shadow: var(--shadow-discord);
    color: #FFFFFF;
    text-decoration: none;
}

/* 온라인 상태 섹션 */
.discord-status-section {
    padding: 20px;
    border-top: 1px solid var(--border-color);
}

.discord-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
}

.discord-status.online {
    color: var(--discord-green);
}

.discord-status.online i {
    animation: pulse 2s infinite;
}

/* 반응형 디자인 */
@media (max-width: 768px) {
    .discord-sidebar.sidebar-left {
        transform: translateX(-100%);
        transition: transform 0.3s;
    }

    .discord-sidebar.sidebar-left.open {
        transform: translateX(0);
    }

    .discord-user-stats {
        grid-template-columns: 1fr;
        gap: 8px;
    }

    .discord-user-card {
        margin: 15px;
        padding: 15px;
    }

    .discord-login-section {
        margin: 15px;
        padding: 15px;
    }

    .discord-add-bot-btn {
        margin: 15px;
        padding: 10px 14px;
    }
}

/* 애니메이션 */
@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

/* 로딩 상태 */
.discord-sidebar .loading {
    padding: 20px;
    text-align: center;
    color: var(--text-muted);
}

.discord-sidebar .loading i {
    font-size: 24px;
    margin-bottom: 10px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}
</style>
<!-- Discord 스타일 우측 사이드바 -->
<aside class="discord-sidebar sidebar-right" id="sidebar-right">
    <!-- 메뉴 헤더 -->
    <div class="discord-menu-header">
        <i class="fas fa-bars"></i>
        <span>메뉴</span>
    </div>

    <!-- 기능 섹션 -->
    <div class="discord-menu-section">
        <h3 class="discord-menu-title">
            <i class="fas fa-cog"></i>
            기능
        </h3>
        <ul class="discord-menu-list">
            <li class="discord-menu-item">
                <a href="/dashboard" class="discord-menu-item <%= isActive(currentPath, '/dashboard') %>">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>대시보드</span>
                </a>
            </li>
            <li class="discord-menu-item">
                <a href="/party" class="discord-menu-item <%= isActive(currentPath, '/party') %>">
                    <i class="fas fa-users"></i>
                    <span>파티 찾기</span>
                </a>
            </li>
            <li class="discord-menu-item">
                <a href="/party/create" class="discord-menu-item">
                    <i class="fas fa-plus-circle"></i>
                    <span>파티 생성</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- 정보 섹션 -->
    <div class="discord-menu-section">
        <h3 class="discord-menu-title">
            <i class="fas fa-info-circle"></i>
            정보
        </h3>
        <ul class="discord-menu-list">
            <li class="discord-menu-item">
                <a href="#" onclick="showToast('준비 중인 기능입니다.', 'info'); return false;" class="discord-menu-item">
                    <i class="fas fa-book"></i>
                    <span>가이드</span>
                </a>
            </li>
            <li class="discord-menu-item">
                <a href="#" onclick="showToast('준비 중인 기능입니다.', 'info'); return false;" class="discord-menu-item">
                    <i class="fas fa-terminal"></i>
                    <span>명령어</span>
                </a>
            </li>
            <li class="discord-menu-item">
                <a href="#" onclick="showToast('준비 중인 기능입니다.', 'info'); return false;" class="discord-menu-item">
                    <i class="fas fa-question-circle"></i>
                    <span>도움말</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- 관리자 섹션 (권한이 있는 경우에만 표시) -->
    <% if (typeof user !== 'undefined' && user && (user.dashboardRole === 'admin' || user.dashboardRole === 'owner')) { %>
    <div class="discord-menu-section">
        <h3 class="discord-menu-title">
            <i class="fas fa-shield-alt"></i>
            관리자
        </h3>
        <ul class="discord-menu-list">
            <li class="discord-menu-item">
                <a href="/permissions" class="discord-menu-item <%= isActive(currentPath, '/permissions') %>">
                    <i class="fas fa-user-shield"></i>
                    <span>권한 관리</span>
                </a>
            </li>
            <li class="discord-menu-item">
                <a href="/servers" class="discord-menu-item <%= isActive(currentPath, '/servers') %>">
                    <i class="fas fa-server"></i>
                    <span>서버 관리</span>
                </a>
            </li>
            <% if (user.dashboardRole === 'owner') { %>
            <li class="discord-menu-item">
                <a href="/db-management" class="discord-menu-item <%= isActive(currentPath, '/db-management') %>">
                    <i class="fas fa-database"></i>
                    <span>DB 관리</span>
                </a>
            </li>
            <% } %>
        </ul>
    </div>
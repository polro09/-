<!-- src/web/views/pages/index.ejs - 기존 디자인 복원 -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Aimdot.dev - Discord Bot' %></title>
    <meta name="description" content="디스코드 서버를 위한 강력하고 직관적인 봇">
    
    <!-- 파비콘 -->
    <link rel="icon" type="image/gif" href="https://i.imgur.com/Sd8qK9c.gif">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        /* 기본 리셋 및 CSS 변수 */
        :root {
            --bg-primary: #0a0a0a;
            --bg-secondary: #1a1a1a;
            --bg-tertiary: #2a2a2a;
            --text-primary: #ffffff;
            --text-secondary: #999999;
            --accent-primary: #2196f3;
            --accent-secondary: #1976d2;
            --border-color: rgba(255, 255, 255, 0.1);
            --success: #4caf50;
            --warning: #ff9800;
            --error: #f44336;
            --info: #2196f3;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* 메인 컨테이너 */
        .container {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

        /* 좌측 사이드바 */
        .sidebar-left {
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100%;
            background: var(--bg-secondary);
            border-right: 1px solid var(--border-color);
            z-index: 100;
            overflow-y: auto;
            overflow-x: hidden;
            transition: transform 0.3s ease;
        }

        .sidebar-left::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar-left::-webkit-scrollbar-track {
            background: var(--bg-secondary);
        }

        .sidebar-left::-webkit-scrollbar-thumb {
            background: var(--bg-tertiary);
            border-radius: 3px;
        }

        .sidebar-logo {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-logo img {
            width: 40px;
            height: 40px;
            border-radius: 8px;
        }

        .sidebar-logo h2 {
            color: var(--accent-primary);
            font-size: 1.4rem;
            font-weight: 600;
        }

        /* 사용자 프로필 섹션 */
        .user-profile-section {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .user-profile-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 15px;
        }

        .user-profile-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: 2px solid var(--accent-primary);
        }

        .user-profile-info {
            flex: 1;
        }

        .user-profile-name {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .edit-nickname-btn {
            font-size: 12px;
            color: var(--text-secondary);
            cursor: pointer;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        .edit-nickname-btn:hover {
            opacity: 1;
            color: var(--accent-primary);
        }

        .user-profile-role {
            font-size: 12px;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* 사용자 통계 */
        .user-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-top: 15px;
        }

        .user-stat-item {
            background: var(--bg-tertiary);
            padding: 12px;
            border-radius: 8px;
            text-align: center;
        }

        .user-stat-label {
            display: block;
            font-size: 11px;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }

        .user-stat-value {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
        }

        /* 네비게이션 메뉴 */
        .nav-section {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .nav-section:last-child {
            border-bottom: none;
        }

        .nav-title {
            font-size: 12px;
            font-weight: 600;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 15px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 12px;
            margin-bottom: 4px;
            color: var(--text-secondary);
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .nav-item:hover {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }

        .nav-item.active {
            background: var(--accent-primary);
            color: white;
        }

        /* 로그인 섹션 스타일 */
        .login-section {
            text-align: center;
        }

        .login-section h3 {
            color: var(--text-primary);
            font-size: 16px;
            margin-bottom: 8px;
        }

        .login-section p {
            color: var(--text-secondary);
            font-size: 12px;
            line-height: 1.4;
            margin-bottom: 16px;
        }

        .discord-login-btn, .discord-invite-btn {
            display: block;
            width: 100%;
            padding: 10px 16px;
            margin-bottom: 8px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: all 0.2s;
            text-align: center;
        }

        .discord-login-btn {
            background: #5865f2;
            color: white;
        }

        .discord-login-btn:hover {
            background: #4752c4;
        }

        .discord-invite-btn {
            background: transparent;
            color: var(--text-secondary);
            border: 1px solid var(--border-color);
        }

        .discord-invite-btn:hover {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }

        /* 프로필 및 로그아웃 버튼 */
        .profile-btn, .logout-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            width: 100%;
            padding: 12px 16px;
            background: var(--bg-tertiary);
            color: var(--text-primary);
            text-decoration: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s;
        }

        .profile-btn:hover {
            background: var(--accent-primary);
            color: white;
        }

        .logout-btn {
            background: #f44336;
        }

        .logout-btn:hover {
            background: #d32f2f;
        }

        /* 우측 사이드바 */
        .sidebar-right {
            position: fixed;
            right: 0;
            top: 0;
            width: 200px;
            height: 100%;
            background: var(--bg-secondary);
            border-left: 1px solid var(--border-color);
            padding: 20px;
            overflow-y: auto;
            z-index: 100;
            transition: transform 0.3s ease;
        }

        .menu-header {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .menu-nav-section {
            margin-bottom: 20px;
        }

        .menu-nav-title {
            font-size: 10px;
            font-weight: 600;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .menu-nav-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 8px;
            margin-bottom: 2px;
            color: var(--text-secondary);
            text-decoration: none;
            border-radius: 4px;
            transition: all 0.2s;
            cursor: pointer;
            font-size: 12px;
        }

        .menu-nav-item:hover {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }

        .menu-nav-item.active {
            background: var(--accent-primary);
            color: white;
        }

        .menu-nav-item i {
            width: 14px;
            text-align: center;
            font-size: 10px;
        }

        /* 메인 콘텐츠 */
        .main-content {
            flex: 1;
            margin-left: 280px;
            margin-right: 200px;
            min-height: 100vh;
            background: var(--bg-primary);
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(33, 150, 243, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(33, 150, 243, 0.03) 0%, transparent 50%);
        }

        /* 헤더 */
        .header {
            background: rgba(10, 10, 10, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 50;
        }

        .header-content {
            padding: 16px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title-header {
            font-size: 24px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .header-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        /* 컨텐츠 섹션 */
        .content {
            padding: 40px;
        }

        /* Hero 섹션 */
        .hero-section {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(135deg, rgba(33, 150, 243, 0.05) 0%, rgba(33, 150, 243, 0.01) 100%);
            border-radius: 12px;
            margin-bottom: 40px;
            border: 1px solid var(--border-color);
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(45deg, var(--accent-primary), #64b5f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 16px;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: var(--text-secondary);
            margin-bottom: 32px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* 버튼 스타일 */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .btn-primary {
            background: var(--accent-primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--accent-secondary);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
        }

        .btn-secondary {
            background: transparent;
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: var(--bg-tertiary);
            border-color: var(--accent-primary);
        }

        /* 통계 섹션 */
        .stats-section {
            margin-bottom: 40px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 24px;
            text-align: center;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--accent-primary);
            margin-bottom: 8px;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* 기능 섹션 */
        .features-section {
            margin-bottom: 40px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
        }

        .feature-card {
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 24px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .feature-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--accent-primary), #64b5f6);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 16px;
        }

        .feature-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .feature-description {
            color: var(--text-secondary);
            line-height: 1.6;
            font-size: 14px;
        }

        /* 모바일 토글 버튼 */
        .mobile-toggle {
            display: none;
            position: fixed;
            top: 20px;
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            width: 40px;
            height: 40px;
            border-radius: 8px;
            align-items: center;
            justify-content: center;
            z-index: 102;
            cursor: pointer;
            transition: all 0.2s;
        }

        .mobile-toggle:hover {
            background: var(--bg-tertiary);
        }

        .mobile-toggle.left {
            left: 20px;
        }

        .mobile-toggle.right {
            right: 20px;
        }

        /* 반응형 디자인 */
        @media (max-width: 1200px) {
            .sidebar-left {
                width: 250px;
            }
            
            .main-content {
                margin-left: 250px;
            }
        }

        @media (max-width: 768px) {
            .sidebar-left {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }

            .sidebar-left.open {
                transform: translateX(0);
            }

            .sidebar-right {
                transform: translateX(100%);
                transition: transform 0.3s;
            }

            .sidebar-right.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                margin-right: 0;
            }

            .mobile-toggle {
                display: flex;
            }

            .content {
                padding: 20px;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-buttons {
                flex-direction: column;
                align-items: center;
            }

            .hero-buttons .btn {
                width: 100%;
                max-width: 300px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }
        }

        /* 로딩 */
        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-primary);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid var(--bg-tertiary);
            border-top: 4px solid var(--accent-primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            color: var(--text-secondary);
            font-size: 16px;
        }

        /* 숨김 클래스 */
        .hidden {
            display: none !important;
        }
    </style>
</head>
<body>
    <!-- 로딩 화면 -->
    <div class="loading" id="loading">
        <div class="spinner"></div>
        <div class="loading-text">로딩 중...</div>
    </div>

    <!-- 모바일 토글 버튼 -->
    <button class="mobile-toggle left" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    <button class="mobile-toggle right" onclick="toggleMenu()">
        <i class="fas fa-ellipsis-v"></i>
    </button>

    <!-- 컨테이너 -->
    <div class="container">
        <!-- 좌측 사이드바 -->
        <aside class="sidebar-left" id="sidebar-left">
            <div class="sidebar-logo">
                <img src="https://i.imgur.com/Sd8qK9c.gif" alt="Aimdot.dev">
                <h2>Aimdot.dev</h2>
            </div>

            <!-- 사용자 프로필 섹션 -->
            <div class="user-profile-section">
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="user-profile-header">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
                             alt="<%= user.username %>" 
                             class="user-profile-avatar"
                             onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                        <div class="user-profile-info">
                            <div class="user-profile-name">
                                <span><%= user.username %></span>
                                <i class="fas fa-edit edit-nickname-btn" onclick="openNicknameModal()"></i>
                            </div>
                            <div class="user-profile-role"><%= user.dashboardRole || 'member' %></div>
                        </div>
                    </div>
                    
                    <div class="user-stats">
                        <div class="user-stat-item">
                            <span class="user-stat-label">전적</span>
                            <span class="user-stat-value">0승 0패</span>
                        </div>
                        <div class="user-stat-item">
                            <span class="user-stat-label">평균 킬</span>
                            <span class="user-stat-value">0.0</span>
                        </div>
                        <div class="user-stat-item">
                            <span class="user-stat-label">랭크 게임</span>
                            <span class="user-stat-value">0회</span>
                        </div>
                        <div class="user-stat-item">
                            <span class="user-stat-label">연습 게임</span>
                            <span class="user-stat-value">0회</span>
                        </div>
                    </div>
                <% } else { %>
                    <div class="user-profile-header">
                        <img src="https://cdn.discordapp.com/embed/avatars/0.png" 
                             alt="Guest" 
                             class="user-profile-avatar">
                        <div class="user-profile-info">
                            <div class="user-profile-name">
                                <span>게스트</span>
                            </div>
                            <div class="user-profile-role">Guest</div>
                        </div>
                    </div>
                    
                    <div class="user-stats">
                        <div class="user-stat-item">
                            <span class="user-stat-label">로그인</span>
                            <span class="user-stat-value">필요</span>
                        </div>
                        <div class="user-stat-item">
                            <span class="user-stat-label">상태</span>
                            <span class="user-stat-value">게스트</span>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- 로그인 상태별 섹션 -->
            <% if (typeof user !== 'undefined' && user) { %>
                <!-- 로그인된 사용자 - 프로필 보기 버튼 -->
                <div class="nav-section">
                    <a href="#" class="profile-btn" onclick="openProfileModal()">
                        <i class="fas fa-user"></i>
                        <span>프로필 보기</span>
                    </a>
                </div>
                
                <!-- 로그아웃 버튼 -->
                <div class="nav-section">
                    <a href="/auth/logout" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>로그아웃</span>
                    </a>
                </div>
            <% } else { %>
                <!-- 로그인되지 않은 사용자 - 시작하기 섹션 -->
                <div class="nav-section">
                    <div class="login-section">
                        <h3>시작하기</h3>
                        <p>Discord 계정으로 로그인하여 더 많은 기능을 이용하세요!</p>
                        <a href="/auth/discord" class="discord-login-btn">
                            <i class="fab fa-discord"></i>
                            Discord로 로그인
                        </a>
                        <a href="#" class="discord-invite-btn">
                            <i class="fas fa-plus"></i>
                            Discord에 봇 추가
                        </a>
                    </div>
                </div>
            <% } %>
        </aside>

        <!-- 우측 사이드바 -->
        <aside class="sidebar-right" id="sidebar-right">
            <div class="menu-header">
                <i class="fas fa-bars"></i>
                <span>메뉴</span>
            </div>

            <div class="menu-nav-section">
                <div class="menu-nav-title">페이지</div>
                <a href="/" class="menu-nav-item active">
                    <i class="fas fa-home"></i>
                    <span>홈</span>
                </a>
                <a href="/party" class="menu-nav-item">
                    <i class="fas fa-users"></i>
                    <span>파티</span>
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                <a href="/dashboard" class="menu-nav-item">
                    <i class="fas fa-tachometer-alt"></i>

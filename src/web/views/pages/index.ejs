    <!-- JavaScript -->
    <script>
        // 서버에서 전달된 데이터
        window.userData = <%- JSON.stringify(typeof user !== 'undefined' ? user : null) %>;
        window.serverData = {
            serverCount: <%= typeof serverCount !== 'undefined' ? serverCount : 0 %>,
            userCount: <%= typeof userCount !== 'undefined' ? userCount : 0 %>,
            commandCount: <%= typeof commandCount !== 'undefined' ? commandCount : 0 %>,
            currentPath: '<%= typeof currentPath !== 'undefined' ? currentPath : '/' %>',
            websiteUrl: '<%= typeof websiteUrl !== 'undefined' ? websiteUrl : '' %>'
        };
        
        // DOM 로드 완료 시 실행
        document.addEventListener('DOMContentLoaded', function() {
            // 로딩 화면 제거
            setTimeout(() => {
                const loading = document.getElementById('loading');
                if (loading) {
                    loading.classList.add('hidden');
                }
            }, 1000);
            
            console.log('Aimdot.dev 메인 페이지 로드 완료 (기존 디자인)');
            
            // 부드러운 스크롤
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            
            // 사용자 정보 로깅
            if (window.userData) {
                console.log('로그인된 사용자:', window.userData.username);
            }
            
            // 서버 통계 로깅
            console.log('서버 통계:', window.serverData);
        });
        
        // 사이드바 토글 함수
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar-left');
            sidebar.classList.toggle('open');
        }
        
        function toggleMenu() {
            const menu = document.getElementById('sidebar-right');
            menu.classList.toggle('open');
        }
        
        // 프로필 모달 (추후 구현)
        function openProfileModal() {
            alert('프로필 보기 기능은 추후 구현 예정입니다.');
        }
        
        // 에러 처리
        window.addEventListener('error', function(e) {
            console.error('페이지 오류:', e.error);
        });
        
        // 반응형 처리
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                document.getElementById('sidebar-left').classList.remove('open');
                document.getElementById('sidebar-right').classList.remove('open');
            }
        });
        
        // 외부 클릭으로 사이드바 닫기 (모바일)
        document.addEventListener('click', function(e) {
            if (window.innerWidth <= 768) {
                const leftSidebar = document.getElementById('sidebar-left');
                const rightSidebar = document.getElementById('sidebar-right');
                const toggleButtons = document.querySelectorAll('.mobile-toggle');
                
                if (leftSidebar.classList.contains('open') && 
                    !leftSidebar.contains(e.target) && 
                    !Array.from(toggleButtons).some(btn => btn.contains(e.target))) {
                    leftSidebar.classList.remove('open');
                }
                
                if (rightSidebar.classList.contains('open') && 
                    !rightSidebar.contains(e.target) && 
                    !Array.from(toggleButtons).some(btn => btn.contains(e.target))) {
                    rightSidebar.classList.remove('open');
                }
            }
        });
    </script>

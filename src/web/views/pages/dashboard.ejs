<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '대시보드 - Aimdot.dev' %></title>
    <link rel="icon" type="image/gif" href="https://i.imgur.com/Sd8qK9c.gif">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* 기본 스타일 */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #0a0a0a;
            color: #ffffff;
            min-height: 100vh;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .page-header {
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2196f3;
            margin-bottom: 8px;
        }

        .page-subtitle {
            font-size: 1.1rem;
            color: #999999;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .dashboard-card {
            background: #1a1a1a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 24px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .dashboard-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 16px;
        }

        .card-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #2196f3, #64b5f6);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #ffffff;
        }

        .card-description {
            color: #999999;
            line-height: 1.6;
            margin-bottom: 16px;
        }

        .card-action {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 16px;
            background: #2196f3;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 500;
            transition: background 0.2s;
        }

        .card-action:hover {
            background: #1976d2;
        }

        .stats-section {
            margin-bottom: 40px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background: #1a1a1a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 24px;
            text-align: center;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2196f3;
            margin-bottom: 8px;
        }

        .stat-label {
            color: #999999;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* 반응형 */
        @media (max-width: 768px) {
            .dashboard-container {
                padding: 20px 16px;
            }

            .page-title {
                font-size: 2rem;
            }

            .dashboard-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* 로딩 */
        .loading {
            display: none;
            text-align: center;
            padding: 40px;
            color: #999999;
        }

        .loading.show {
            display: block;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #1a1a1a;
            border-top: 4px solid #2196f3;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 16px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- 페이지 헤더 -->
        <div class="page-header">
            <h1 class="page-title">대시보드</h1>
            <p class="page-subtitle">
                <% if (typeof user !== 'undefined' && user) { %>
                    환영합니다, <%= user.username %>님! 봇 관리 도구를 사용해보세요.
                <% } else { %>
                    봇 관리 및 설정을 위한 대시보드입니다.
                <% } %>
            </p>
        </div>

        <!-- 통계 섹션 -->
        <section class="stats-section">
            <h2 class="section-title">
                <i class="fas fa-chart-bar"></i>
                봇 통계
            </h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.guilds || 0 : 0 %></div>
                    <div class="stat-label">서버</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.users || 0 : 0 %></div>
                    <div class="stat-label">사용자</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.channels || 0 : 0 %></div>
                    <div class="stat-label">채널</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= typeof stats !== 'undefined' ? stats.commands || 0 : 0 %></div>
                    <div class="stat-label">명령어</div>
                </div>
            </div>
        </section>

        <!-- 기능 카드 섹션 -->
        <section class="dashboard-grid">
            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-server"></i>
                    </div>
                    <div class="card-title">서버 관리</div>
                </div>
                <div class="card-description">
                    Discord 서버 설정을 관리하고 봇의 권한을 설정할 수 있습니다.
                </div>
                <% if (typeof user !== 'undefined' && user && ['subadmin', 'admin', 'owner'].includes(user.dashboardRole)) { %>
                <a href="/dashboard/servers" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    서버 관리
                </a>
                <% } else { %>
                <span style="color: #999; font-size: 14px;">권한이 필요합니다</span>
                <% } %>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-title">파티 시스템</div>
                </div>
                <div class="card-description">
                    게임 파티를 생성하고 관리할 수 있는 시스템입니다.
                </div>
                <a href="/party" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    파티 보기
                </a>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="card-title">권한 관리</div>
                </div>
                <div class="card-description">
                    사용자 권한과 대시보드 접근 권한을 관리할 수 있습니다.
                </div>
                <% if (typeof user !== 'undefined' && user && ['admin', 'owner'].includes(user.dashboardRole)) { %>
                <a href="/dashboard/permissions" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    권한 관리
                </a>
                <% } else { %>
                <span style="color: #999; font-size: 14px;">관리자 권한이 필요합니다</span>
                <% } %>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="card-title">데이터베이스</div>
                </div>
                <div class="card-description">
                    데이터베이스 상태를 확인하고 관리할 수 있습니다.
                </div>
                <% if (typeof user !== 'undefined' && user && ['subadmin', 'admin', 'owner'].includes(user.dashboardRole)) { %>
                <a href="/dashboard/db-management" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    DB 관리
                </a>
                <% } else { %>
                <span style="color: #999; font-size: 14px;">권한이 필요합니다</span>
                <% } %>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="card-title">상태 모니터링</div>
                </div>
                <div class="card-description">
                    봇의 실시간 상태와 성능을 모니터링할 수 있습니다.
                </div>
                <a href="/health" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    상태 확인
                </a>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="card-title">메인 페이지</div>
                </div>
                <div class="card-description">
                    Aimdot.dev 메인 페이지로 돌아가서 전체 기능을 확인할 수 있습니다.
                </div>
                <a href="/" class="card-action">
                    <i class="fas fa-arrow-right"></i>
                    메인으로
                </a>
            </div>
        </section>

        <!-- 로딩 상태 -->
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>데이터를 불러오는 중...</p>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // 서버에서 전달된 데이터
        window.dashboardData = {
            user: <%- JSON.stringify(typeof user !== 'undefined' ? user : null) %>,
            stats: <%- JSON.stringify(typeof stats !== 'undefined' ? stats : {}) %>,
            currentPath: '<%= typeof currentPath !== 'undefined' ? currentPath : '/dashboard' %>'
        };

        // DOM 로드 완료 시 실행
        document.addEventListener('DOMContentLoaded', function() {
            console.log('대시보드 로드 완료');
            console.log('사용자 정보:', window.dashboardData.user);
            console.log('봇 통계:', window.dashboardData.stats);

            // 권한별 기능 안내
            if (window.dashboardData.user) {
                const role = window.dashboardData.user.dashboardRole;
                console.log(`사용자 권한: ${role}`);
                
                if (role === 'guest') {
                    console.log('게스트 사용자 - 제한된 기능만 사용 가능');
                } else if (role === 'member') {
                    console.log('일반 사용자 - 기본 기능 사용 가능');
                } else if (['subadmin', 'admin', 'owner'].includes(role)) {
                    console.log('관리자 사용자 - 모든 기능 사용 가능');
                }
            }
        });

        // 에러 처리
        window.addEventListener('error', function(e) {
            console.error('대시보드 오류:', e.error);
        });
    </script>
</body>
</html>